// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "language_models": {
    "copilot_chat": {
      "api_url": "https://api.githubcopilot.com/chat/completions",
      "auth_url": "https://api.github.com/copilot_internal/v2/token",
      "models_url": "https://api.githubcopilot.com/models"
    }
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "debugger": {
    "dock": "left"
  },
  "show_edit_predictions": false,
  "languages": {
    "Rust": {
      "show_edit_predictions": false
    },
    "Python": {
      "language_servers": ["ruff"]
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 16,
  "ui_font_family": "JetBrainsMonoNL Nerd Font Propo",
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Rich Vesper"
  },
  "soft_wrap": "editor_width"
}
